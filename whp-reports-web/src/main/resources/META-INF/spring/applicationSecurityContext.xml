<?xml version="1.0" encoding="UTF-8"?>

<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <beans:import resource="classpath:applicationWebSecurityContext.xml"/>

    <http auto-config="false" use-expressions="true" entry-point-ref="basicAuthenticationEntryPoint">
        <http-basic/>

        <logout logout-url="/security/j_spring_security_logout" invalidate-session="false"
                success-handler-ref="logoutSuccessHandler"/>

        <!--Only IT Admin-->
        <intercept-url pattern="/rest/**" access="hasRole('IT_ADMIN')" requires-channel="any"/>
        <intercept-url pattern="/bigquery/**" access="hasRole('IT_ADMIN')" requires-channel="any"/>
        <intercept-url pattern="/diagnostics/**" access="hasRole('IT_ADMIN')" requires-channel="any"/>

        <intercept-url pattern="/adherenceCallLog/**" access="permitAll and hasIpAddress('127.0.0.1')"  requires-channel="any"/>
        <intercept-url pattern="/adherence/**" access="permitAll and hasIpAddress('127.0.0.1')" requires-channel="any"/>
        <intercept-url pattern="/containerRegistrationCallLog/**" access="permitAll and hasIpAddress('127.0.0.1')" requires-channel="any"/>
        <intercept-url pattern="/flashingLog/**" access="permitAll and hasIpAddress('127.0.0.1')" requires-channel="any"/>
        <intercept-url pattern="/sputumTracking/**" access="permitAll and hasIpAddress('127.0.0.1')" requires-channel="any"/>

    </http>

    <authentication-manager alias="authenticationManager">
        <authentication-provider ref="motechAuthenticationProvider"/>
    </authentication-manager>

    <beans:bean id="basicAuthenticationEntryPoint" class="org.springframework.security.web.authentication.www.BasicAuthenticationEntryPoint">
        <beans:property name="realmName" value="WHP - Reports"/>
    </beans:bean>

</beans:beans>